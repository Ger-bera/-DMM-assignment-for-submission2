<h1>Editing Book</h1>

<%= form_with model:@book, class:"edit_book",id:"edit_book_#{@book[:id]}",action:"/books/#{@book[:id]}", local:true do |f| %>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li>
        <%= message %>
      </li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <% if @book.errors.any? %>
    <div class="field_with_errors">
      <label for="book_title">Title</label>
    </div>
    
  <% else %>
    <label for="book_title">Title</label>
    
  <% end %>
  <%= f.text_field :title , :name => "book[title]", :id => "book_title", :class => "book_title" %>
</div>

<div class="field">
  <% if @book.errors.any? %>
    <div class="field_with_errors">
      <label for="book_body">Body</label>
    </div>
    
  <% else %>
    <label for="book_body">Body</label>
    
  <% end %>
  <%= f.text_area :body , :class => "book_body", :name => "book[body]", :id =>"book_body" %>
</div>

<div class="actions">
  <%= f.submit 'Update Book' %>
</div>

<% end %>

<%= link_to "Show",book_path(@book) %> |
<%= link_to "Back", books_path %>